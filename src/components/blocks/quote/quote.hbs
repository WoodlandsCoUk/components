<blockquote class="{{modifier 'quote' quote.modifiers}}">
    <div class="inner contained">
        <div class="quote__content">
            <p>“{{ quote.text }}”</p>
        </div>
        <div class="quote__by">
            <cite>
                {{ quote.cite }}, {{ quote.company }}
            </cite>
        </div>
    </div>
</blockquote>
