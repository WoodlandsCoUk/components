<div class="{{modifier 'cta' cta.modifiers}}">
  <div class="cta__inner">
    <h2 class="cta__title">{{ cta.title }}</h2>
    <p class="cta__text">{{ cta.text }}</p>

    <hr />

    {{ render '@block--managed-by--manager' }}

    <hr />

    <p class="cta__text cta__text--extra">{{{ cta.extra }}}</p>

    {{#if cta.button}}
      {{ render '@button' cta.button merge=true }}
    {{/if}}
  </div>
</div>
