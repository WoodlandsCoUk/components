{{ render '@layout-header' header merge=true }}

<main>
    {{#> @section modifiers='bg-yellow,short' }}
        {{ render '@block--hero' hero }}
    {{/ @section }}

    {{#> @section }}
        <h2 class="section__title section__title--alt pb-10">{{ title }}</h2>

        {{#> @grid modifiers="2,spaced,divider" }}
            <div class="grid__item">
                {{ render '@map--svg' map merge=true }}
            </div>
            <div class="grid__item">
                {{ render '@block--subscribe' }}
            </div>
        {{/ @grid }}

    {{/ @section }}

    {{#> @section modifiers='bg-yellow' }}
        {{ render '@block--quote--full' this merge=true }}
    {{/ @section }}

    {{#> @section modifiers='bg-green' }}
        {{ render '@block--cta-form' }}
    {{/ @section }}
</main>

{{ render '@layout-footer' }}
