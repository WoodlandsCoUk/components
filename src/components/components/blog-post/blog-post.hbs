<div class="{{modifier 'blog-post' modifiers}}">
  <h1 class="blog-post__title">{{ title }}</h1>

  <div class="blog-post__content typography">
    {{{markdown text }}}
  </div>

  <div class="blog-post__meta">
    <p class="blog-post__tag">Posted in: {{ tag }}</p>
    <p class="blog-post__date">{{ date }}</p>
  </div>
</div>
