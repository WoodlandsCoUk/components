{{#> @grid modifiers="2/3,spaced,divider" }}
    <div class="grid__item">
        {{ render '@media' }}

        <br />

        {{ render '@block--read-more' read-more merge=true }}

        <br />

        {{ render '@block--button-group' this }}

        {{ render '@block--accordion' accordion }}
    </div>
    <div class="grid__item">
        <p class="lede">{{ lede }}</p>

        {{ render '@button' visit merge=true }}
        {{ render '@button' pdf merge=true }}

        {{ render '@block--managed-by' }}
    </div>
{{/ @grid }}
